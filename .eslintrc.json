{
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
    "globals": {
        "localStorage": true,
        "fetch": true,
        "console": true
    },
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "jest": true
    },
    "settings": {
        "react": {
            "version": "16.8"
        }
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["jest", "react", "react-hooks"],
    "rules": {
        "no-console": "off",
        "semi": "error",
        "indent": ["error", 4]
    }
}